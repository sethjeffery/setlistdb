.glide
  .glide__track{ data: { glide_el: "track" } }
    %ul.glide__slides#setlist-slides
      - @setlist.setlist_versions.includes(:version).each do |setlist_version|
        - version = setlist_version.version.decorate
        %li.glide__slide{ data: { id: setlist_version.id }}
          .container
            %article.song-page.mx-auto
              %h1.song-title
                = version.title

              %h2.song-subtitle
                = version.author

              .song-content
                = version.to_html
