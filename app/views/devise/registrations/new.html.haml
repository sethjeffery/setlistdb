.container.center-form.my-4
  %h2 Sign up

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!

    .form-group
      = f.label :email
      = f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      class: 'form-control',
                      required: true

    .form-group
      = f.label :password
      = f.password_field :password,
                         autocomplete: "off",
                         class: 'form-control',
                         min_length: @minimum_password_length,
                         required: true

    .form-actions.mt-4.text-center
      = f.submit "Sign up", class: 'btn btn-primary px-5'

  = render "devise/shared/links"
