.container.center-form.my-4
  %h2 Sign up

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!

    .form-group.form-row
      = f.label :email, class: 'col-sm-3 col-form-label'
      .col-sm-9
        = f.email_field :email,
                        autofocus: true,
                        autocomplete: "email",
                        class: 'form-control',
                        required: true

    .form-group.form-row
      = f.label :password, class: 'col-sm-3 col-form-label'
      .col-sm-9
        = f.password_field :password,
                           autocomplete: "off",
                           class: 'form-control',
                           min_length: @minimum_password_length,
                           required: true

    .form-actions.mt-4.form-row
      .col-sm-9.offset-sm-3.text-center.text-sm-left
        = f.submit "Sign up", class: 'btn btn-primary px-5'

  = render "devise/shared/links"
